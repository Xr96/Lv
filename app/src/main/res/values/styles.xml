<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--下面button布局-->
    <style name="AppGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!--个人商品、店铺、足迹-->
    <style name="AppF4">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!--个人中布局前面的小图片-->
    <style name="AppF4d_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <!--个人中布局-->
    <style name="AppF4d_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--个人应用布局-->
    <style name="AppF4d_layouts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--个人字体布局-->
    <style name="AppF4d_zi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--小应用布局局-->
    <style name="AppF4d_Xyy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <!--个人小箭头-->
    <style name="AppF4d_Jt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_normal_dot_left</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--设置/个人信息右边小箭头-->
    <style name="AppF4d_Sz_Jt">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:src">@mipmap/ic_normal_dot_left</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--设置/个人信息左边文字-->
    <style name="AppF4d_Sz_wenzi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--设置/个人信息相对布局-->
    <style name="AppF4d_Sz_xiangdui">
        android:background="@color/white"
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/white</item>
    </style>




</resources>
